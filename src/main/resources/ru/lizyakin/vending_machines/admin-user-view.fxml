<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.lizyakin.vending_machines.controllers.AdminUserController"
            prefHeight="600.0" prefWidth="600.0">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Создать" onAction="#onCreateUser"/>
        <Button text="Обновить" onAction="#onUpdateUser"/>
        <Button text="Удалить" onAction="#onDeleteUser"/>
    </HBox>

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ИД" prefWidth="100" />
            <TableColumn fx:id="roleColumn" text="Роль" prefWidth="150" />
            <TableColumn fx:id="lastnameColumn" text="Фамилия" prefWidth="150" />
            <TableColumn fx:id="firstnameColumn" text="Имя" prefWidth="70" />
            <TableColumn fx:id="surnameColumn" text="Отчество" prefWidth="100" />
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="100" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Обновить таблицу" onAction="#initialize"/>
    </HBox>
</VBox>
