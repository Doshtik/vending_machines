<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="ru.lizyakin.vending_machines.controllers.AdminUserController"
        stylesheets="@styles/admin.css"
        spacing="10">
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="toolbar">
        <Button text="Создать" onAction="#onCreateUser" styleClass="btn-crud-create"/>
        <Button text="Обновить" onAction="#onUpdateUser" styleClass="btn-crud-update"/>
        <Button text="Удалить" onAction="#onDeleteUser" styleClass="btn-crud-delete"/>
    </HBox>

    <TableView stylesheets="@styles/table.css" fx:id="tableView" VBox.vgrow="ALWAYS" styleClass="table">
        <columns>
            <TableColumn fx:id="idColumn" text="ИД" prefWidth="100" styleClass="table-column" />
            <TableColumn fx:id="roleColumn" text="Роль" prefWidth="150" styleClass="table-column" />
            <TableColumn fx:id="lastnameColumn" text="Фамилия" prefWidth="150" styleClass="table-column" />
            <TableColumn fx:id="firstnameColumn" text="Имя" prefWidth="70" styleClass="table-column" />
            <TableColumn fx:id="surnameColumn" text="Отчество" prefWidth="100" styleClass="table-column" />
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="100" styleClass="table-column" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="footer">
        <Button text="Обновить таблицу" onAction="#initialize"/>
    </HBox>
</VBox>
