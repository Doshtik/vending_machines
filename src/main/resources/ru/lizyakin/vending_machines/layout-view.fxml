<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.SubScene?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<HBox stylesheets="@styles/layout-dark.css" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.lizyakin.vending_machines.controllers.LayoutController" prefWidth="1200" prefHeight="600">
    <!-- Сайдбар -->
    <VBox fx:id="sidebar" prefWidth="250.0" styleClass="sidebar">
        <VBox fx:id="sidebarHeader" alignment="CENTER_LEFT" styleClass="sidebar-header">
            <MenuButton fx:id="adminMenuButton" maxWidth="Infinity" styleClass="admin-menu">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/images/Flag_of_Russia.png" />
                        </image>
                    </ImageView>
                </graphic>
                <items>
                    <MenuItem text="Мой профиль">
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/person.svg" />
                                </image>
                            </ImageView>
                        </graphic>
                    </MenuItem>
                    <MenuItem text="Мои сессии">
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/lock.svg" />
                                </image>
                            </ImageView>
                        </graphic>
                    </MenuItem>
                    <MenuItem onAction="#navToAuth" text="Выход">
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/power.svg" />
                                </image>
                            </ImageView>
                        </graphic>
                    </MenuItem>
                </items>
            </MenuButton>
        </VBox>

        <VBox fx:id="sidebarBody" spacing="10.0" VBox.vgrow="ALWAYS" styleClass="sidebar-nav">
            <Button fx:id="buttonMain" onAction="#navToMain" text="Главная" maxWidth="Infinity" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/icons/search.svg" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="button_monitorVm" onAction="#navToMonitorVM" text="Монитор ТА" maxWidth="Infinity" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/icons/display.svg" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <MenuButton fx:id="menubuttonReports" text="Детальные отчеты" maxWidth="Infinity" styleClass="nav-menu">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/icons/file-earmark-bar-graph.svg" />
                        </image>
                    </ImageView>
                </graphic>
                <items>
                    <MenuItem fx:id="reportVM" onAction="#navToReportVM" text="Отчет по ТА"/>
                    <MenuItem fx:id="reportUsers" onAction="#navToReportUsers" text="Отчет по пользователям"/>
                </items>
            </MenuButton>
            <MenuButton fx:id="menubuttonAccounting" text="Учёт ТМЦ" maxWidth="Infinity" styleClass="nav-menu">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/icons/cart.svg" />
                        </image>
                    </ImageView>
                </graphic>
                <items>
                    <MenuItem fx:id="accountingVM" onAction="#navToAccountingVM" text="Учет ТА"/>
                    <MenuItem fx:id="accountingUsers" onAction="#navToAccountingUsers" text="Учёт пользователей"/>
                </items>
            </MenuButton>
            <MenuButton fx:id="menubuttonAdmin" text="Администрирование" maxWidth="Infinity" styleClass="nav-menu">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/icons/gear.svg" />
                        </image>
                    </ImageView>
                </graphic>
                <items>
                    <MenuItem fx:id="adminVM" onAction="#navToAdminVM" text="Торговые автоматы"/>
                    <MenuItem fx:id="adminCompanies" onAction="#navToAdminCompanies" text="Компании"/>
                    <MenuItem fx:id="adminUsers" onAction="#navToAdminUsers" text="Пользователи"/>
                    <MenuItem fx:id="adminModems" onAction="#navToAdminModems" text="Модемы"/>
                    <MenuItem fx:id="adminAdditionally" onAction="#navToAdminAdditionally" text="Дополнительные"/>
                </items>
            </MenuButton>
        </VBox>
    </VBox>

    <!-- Основная область -->
    <VBox fx:id="mainContent" HBox.hgrow="ALWAYS" styleClass="main-content">
        <HBox fx:id="mainHeader" alignment="CENTER_LEFT" styleClass="content-header">
            <Label fx:id="companyName" text="ООО Торговые Автоматы" styleClass="company-label" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="navSectionName" styleClass="section-title" />
        </HBox>

        <StackPane fx:id="mainBody" VBox.vgrow="ALWAYS" styleClass="body-container">
            <!-- Сюда будут подгружаться контентные части -->
        </StackPane>
    </VBox>
</HBox>
