<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.Region?>
<HBox stylesheets="@styles/main.css" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.lizyakin.vending_machines.controllers.MainController">
    <!-- Сайдбар -->
    <VBox fx:id="sidebar" prefWidth="250.0" styleClass="sidebar">
        <VBox fx:id="sidebar_header" alignment="CENTER_LEFT" styleClass="sidebar-header">
            <Label fx:id="nav_header" text="НАВИГАЦИЯ" styleClass="sidebar-title" />
        </VBox>

        <VBox fx:id="sidebar_body" spacing="5.0" VBox.vgrow="ALWAYS" styleClass="sidebar-nav">
            <Button fx:id="button_main" text="Главная" maxWidth="Infinity" styleClass="nav-button"/>
            <Button fx:id="button_monitor_vm" text="Монитор ТА" maxWidth="Infinity" styleClass="nav-button"/>
            <MenuButton fx:id="menubutton_reports" text="Детальные отчеты" maxWidth="Infinity" styleClass="nav-menu">
                <items>
                    <MenuItem fx:id="report_vm" text="Отчет по ТА"/>
                    <MenuItem fx:id="report_users" text="Отчет по пользователям"/>
                </items>
            </MenuButton>
            <MenuButton fx:id="menubutton_accounting" text="Учёт ТМЦ" maxWidth="Infinity" styleClass="nav-menu">
                <items>
                    <MenuItem fx:id="accounting_vm" text="Учет ТА"/>
                    <MenuItem fx:id="accounting_users" text="Учёт пользователей"/>
                </items>
            </MenuButton>
            <MenuButton fx:id="menubutton_admin" text="Администрирование" maxWidth="Infinity" styleClass="nav-menu">
                <items>
                    <MenuItem fx:id="admin_vm" text="Торговые автоматы"/>
                    <MenuItem fx:id="admin_companies" text="Компании"/>
                    <MenuItem fx:id="admin_users" text="Пользователи"/>
                    <MenuItem fx:id="admin_modems" text="Модемы"/>
                    <MenuItem fx:id="admin_additionally" text="Дополнительные"/>
                </items>
            </MenuButton>
        </VBox>
    </VBox>

    <!-- Основная область -->
    <VBox fx:id="mainframe" HBox.hgrow="ALWAYS" styleClass="main-content">
        <HBox fx:id="main_header" alignment="CENTER_LEFT" styleClass="content-header">
            <Label fx:id="company_name" text="ООО Торговые Автоматы" styleClass="company-label" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="nav_section_name" text="Главное" styleClass="section-title" />
        </HBox>

        <StackPane fx:id="main_body" VBox.vgrow="ALWAYS" styleClass="body-container">
            <!-- Сюда будут подгружаться контентные части -->
        </StackPane>
    </VBox>
</HBox>
