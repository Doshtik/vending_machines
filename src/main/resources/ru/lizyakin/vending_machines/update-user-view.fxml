<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        stylesheets="@styles/forms.css"
        fx:controller="ru.lizyakin.vending_machines.controllers.UpdateUserController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <GridPane hgap="15.0" vgap="10.0" styleClass="form-body">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>

        <children>
            <Label text="Роль:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ComboBox fx:id="roleComboBox" styleClass="form-combobox" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Фамилия:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="lastnameTextField" styleClass="form-input" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Имя:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="firstnameTextField" styleClass="form-input" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Отчество:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="surnameTextField" styleClass="form-input" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Email:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="emailTextField" styleClass="form-input" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Пароль:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="passwordTextField" styleClass="form-input" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="5" >
                <Button styleClass="form-button" defaultButton="true" text="Сохранить" onAction="#onConfirm" />
            </HBox>
        </children>
    </GridPane>
</VBox>
